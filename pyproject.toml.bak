[build-system]
requires = ["setuptools>=68.0", "wheel"]
build-backend = "setuptools.build_meta"

[project]
name = "fedora-l10n"
version = "0.2.2"
description = "View Fedora translation progress via Weblate API"
readme = "README.md"
license = {text = "GPL-3.0-or-later"}
authors = [{name = "Daniel Nylander", email = "daniel@danielnylander.se"}]
requires-python = ">=3.10"
dependencies = ["PyGObject>=3.42"]

[project.urls]
Homepage = "https://github.com/yeager/fedora-l10n"
"Bug Tracker" = "https://github.com/yeager/fedora-l10n/issues"

[project.scripts]
fedora-l10n = "fedora_l10n.main:main"

[project.gui-scripts]
fedora-l10n = "fedora_l10n.main:main"

[tool.setuptools.packages.find]
where = ["src"]
